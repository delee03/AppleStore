@model IList<AppleStore.Models.ApplicationUser>
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@using Microsoft.AspNetCore.Identity
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    // var listCustomers = (List<users>)ViewData["listCustomers"];
    var listCustomers = ViewBag.Customers;
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <div class="table-responsive table-desi">
                        <table class="user-table table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Customers)
                                {
                                    @if (item != null)
                                    {
                                        <tr>
                                            <td>
                                                <a href="javascript:void(0)">
                                                    <span class="d-block ">@item.FullName</span>
                                                    @*<span>Essex Court</span>*@
                                                </a>
                                            </td>
                                            <td>@item.Address</td>
                                            <td>@item.Email</td>
                                            <td>
                                                <ul>
                                                    <li>
                                                        <a href="@Url.Action("Detail", "Customers", new { Id = item.Id })" title="Xem chi tiết">
                                                            <span class="lnr lnr-eye"></span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>