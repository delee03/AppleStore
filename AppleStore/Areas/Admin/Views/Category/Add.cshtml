@model AppleStore.Models.Category
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Thêm loại sản phẩm</h5>
                        </div>

                        <form asp-action="Create" class="theme-form theme-form-2 mega-form" method="post" action="">
                            <div class="row">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-2 mb-0">Tên loại sản phẩm</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" placeholder="Category Name" name="Name" required />
                                    </div>
                                </div>

                                                         
                                <div class="card-footer text-end border-0 pt-0">
                                    <button class="btn btn-primary me-3" type="submit">Thêm</button>
                                    <button class="btn btn-outline-primary" type="reset">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>